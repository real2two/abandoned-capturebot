{
  "name": "capturebot",
  "type": "module",
  "author": "Two",
  "main": "src/main/index.ts",
  "scripts": {
    "start": "dotenv -- tsx .",
    "dev": "nodemon",
    "format": "biome format --write ./",
    "commands/create": "dotenv -- tsx tools/createCommands.ts",
    "schema/push": "drizzle-kit push:mysql",
    "schema/generate": "pnpm drizzle-kit generate:mysql",
    "schema/migrate": "dotenv -- tsx tools/migrateDatabase.ts"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm start",
    "ext": "ts, js"
  },
  "dependencies": {
    "@discordjs/builders": "^1.7.0",
    "discord-interactions": "^3.4.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.8",
    "hyper-express": "^6.15.2",
    "mysql2": "^3.9.4",
    "nodemon": "^3.1.0",
    "ts-case-convert": "^2.0.7",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "discord-api-types": "^0.37.79",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.14"
  }
}
